<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <% @food_shops.each do |food_shop| %>
          <div class="card mb-6">
            <header class="card-header">
              <p class="card-header-title">
                <%= food_shop.name %>
              </p>
            </header>
              <div class="card-content">
                <div class="content">
                  <div class="content average-score">
                    <div class="star-rating mb-2">
                      <div class="star-rating-front" style="width: <%= food_shop.review_score_percentage %>%">★★★★★</div>
                        <div class="star-rating-back">★★★★★</div>
                    </div>
                    <div class="average-score-display ml-3 pt-2">
                      <%= food_shop.avg_score %>点（<%= food_shop.reviews.count %>件のレビュー）
                    </div>
                  </div>
                </div>
              </div>
              <footer class="card-footer">
                <%= link_to food_shop_reviews_path(food_shop), class: "button card-footer-item" do %>
                レビューを見る
                <% end %>
                <%= link_to food_shop_path(food_shop), class: "button card-footer-item" do %>
                レビューを書く
                <% end %>
              </footer>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
